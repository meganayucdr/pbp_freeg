<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditGiveawayActivity">

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="update" />

    <EditText
        android:id="@+id/editContent2"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editParticipants2"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ccpedit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp"
        android:ems="10"
        android:hint="Participants"
        android:inputType="number" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccpedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editContent2"
        android:layout_marginBottom="242dp"
        app:ccp_autoDetectCountry="true"
        app:ccp_countryAutoDetectionPref="SIM_NETWORK_LOCALE" />

    <ImageView
        android:id="@+id/imageContent2"
        android:layout_width="253dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="113dp" />

    <TextView
        android:id="@+id/txtUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageUser2"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/txtUser2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />
</RelativeLayout>